<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".domain.main.MainActivity">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/tb_top"
		app:title="@string/login"
		app:navigationIcon="@drawable/ic_close"
		style="@style/Toolbar"/>

	<com.senierr.github.widget.ClearEditText
		android:id="@+id/et_account"
		android:hint="@string/account"
		android:textSize="@dimen/sp_15"
		android:textColor="@color/text_content"
		android:singleLine="true"
		android:background="@color/white"
		android:layout_marginTop="@dimen/dp_16"
		android:paddingStart="@dimen/dp_16"
		android:paddingEnd="@dimen/dp_16"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_48"/>

	<View
		android:background="@color/divider_normal"
		android:layout_width="match_parent"
		android:layout_height="@dimen/px_1"/>

	<LinearLayout
		android:orientation="horizontal"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_48">

		<com.senierr.github.widget.ClearEditText
			android:id="@+id/et_password"
			android:hint="@string/password"
			android:inputType="textPassword"
			android:textSize="@dimen/sp_15"
			android:textColor="@color/text_content"
			android:maxLength="15"
			android:singleLine="true"
			android:background="@color/transparent"
			android:paddingStart="@dimen/dp_16"
			android:paddingEnd="@dimen/dp_8"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"/>

		<ImageButton
			android:id="@+id/btn_visibility"
			android:src="@drawable/selector_visibility"
			android:tint="@color/app_theme"
			android:background="@color/transparent"
			android:paddingStart="@dimen/dp_8"
			android:paddingEnd="@dimen/dp_16"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"/>
	</LinearLayout>

	<Button
		android:id="@+id/btn_login"
		android:text="@string/login"
		android:textColor="@color/text_white"
		android:textSize="@dimen/sp_15"
		style="@style/BaseButton"
		android:background="@drawable/shape_white_corner_4dp"
		android:backgroundTint="@color/color_btn_theme"
		android:layout_margin="@dimen/dp_16"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_45"/>
</LinearLayout>